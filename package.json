{
  "type": "commonjs",
  "name": "dibu-p-api",
  "version": "0.0.1",
  "description": "Prototyping API for Dibumon",
  "main": "server.js",
  "scripts": {
    "test": "test",
    "start": "node ./src/server.js",
    "migrate": "node ./src/migrations/run-migration.js",

    "migrate:create:users": "node-pg-migrate -m ./src/migrations/migrations-user/",
    "migrate:create:app": "node-pg-migrate -m ./src/migrations/migrations-app/",

    "migrate:user:up": "npm run migrate -- --schema user --direction up",
    "migrate:user:down": "npm run migrate -- --schema user --direction down",
    
    "migrate:app:up": "npm run migrate -- --schema app --direction up",
    "migrate:app:down": "npm run migrate -- --schema app --direction down",

    "migrate:user:up:1": "npm run migrate -- --schema user --direction up --count 1",
    "migrate:user:down:1": "npm run migrate -- --schema user --direction down --count 1",

    "migrate:app:up:1": "npm run migrate -- --schema app --direction up --count 1",
    "migrate:app:down:1": "npm run migrate -- --schema app --direction down --count 1"
  },
  "author": "qbytx",
  "license": "ISC",
  "dependencies": {
    "@fastify/autoload": "^6.0.1",
    "@fastify/cors": "^10.0.1",
    "@fastify/env": "^5.0.1",
    "@fastify/helmet": "^12.0.1",
    "@fastify/rate-limit": "^10.1.0",
    "@fastify/sensible": "^6.0.1",
    "@fastify/static": "^8.0.1",
    "@fastify/under-pressure": "^9.0.1",
    "@infisical/sdk": "^3.0.1",
    "bcryptjs": "^2.4.3",
    "config": "^3.3.12",
    "dotenv": "^16.4.5",
    "fastify": "^5.0.0",
    "fluent-json-schema": "^5.0.0",
    "js-yaml": "^4.1.0",
    "lru-cache": "^11.0.1",
    "make-promises-safe": "^5.1.0",
    "nodemailer": "^6.9.15",
    "pg-promise": "^11.9.1",
    "pino-pretty": "^11.2.2",
    "sqlstring": "^2.3.3",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "node-pg-migrate": "^7.7.0",
    "semistandard": "^17.0.0"
  }
}
